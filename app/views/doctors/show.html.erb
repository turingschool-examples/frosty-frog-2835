<h1>Doctor: <%= @doctor.name %></h1>
<p>Specialty: <%= @doctor.specialty %></p>
<p>Received doctorate from: <%= @doctor.university %></p>
<p>Hospital: <%= @doctor.hospital.name %></p>

<h2>Patients:</h2>
<ul>
  <% @doctor.patients.each do |patient| %>
    <div id="patient-<%= patient.id %>"> 
      <li>
        <%= patient.name %>
        <%= button_to "remove", "/doctors/#{@doctor.id}/patients/#{patient.id}", method: :delete%>
      </li>
    </div>
  <% end %>
</ul>
